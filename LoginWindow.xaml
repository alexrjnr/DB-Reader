<Window x:Class="DBReader.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Config. de Loguin" Height="550" Width="320"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A1A"
        Foreground="White">

    <StackPanel Margin="20">

        <TextBlock Text="Host Ip    " Margin="0,0,0,5" FontSize="15" Foreground="White"/>
        <TextBox x:Name="TxtHost" x:FieldModifier="public"
                 Text="IP Server"
                 Margin="0,0,0,10"
                 Background="Black"
                 Foreground="White"
                 BorderBrush="White"
                 Padding="3"/>

        <TextBlock Text="Port" Margin="0,0,0,5" FontSize="15" Foreground="White"/>
        <TextBox x:Name="TxtPort" x:FieldModifier="public"
                 Text="5432"
                 Margin="0,0,0,10"
                 Background="Black"
                 Foreground="White"
                 BorderBrush="White"
                 Padding="3"/>

        <TextBlock Text="User" Margin="0,0,0,5" FontSize="15" Foreground="White"/>
        <TextBox x:Name="TxtUser" x:FieldModifier="public"
                 Text="postgres"
                 Margin="0,0,0,10"
                 Background="Black"
                 Foreground="White"
                 BorderBrush="White"
                 Padding="3"/>

        <TextBlock Text="Senha" Margin="0,0,0,5" FontSize="15" Foreground="White"/>
        <PasswordBox x:Name="TxtPass"
                     x:FieldModifier="public"
                     Margin="0,0,0,10"
                     Background="Black"
                     Foreground="White"
                     BorderBrush="White"
                     Padding="3"/>

        <TextBlock Text="Banco de Dados" Margin="0,0,0,5" FontSize="15" Foreground="White"/>
        <TextBox x:Name="TxtDb"
                 Text="gf_gs"
                 IsReadOnly="True"
                 Margin="0,0,0,10"
                 Background="Black"
                 Foreground="White"
                 BorderBrush="White"
                 Padding="3"/>

        <TextBlock Text="Selecione Patch" Margin="0,0,0,5" FontSize="15" Foreground="White"/>
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TxtPath"
                     x:FieldModifier="public"
                     IsReadOnly="True"
                     Background="Black"
                     Foreground="White"
                     BorderBrush="White"
                     Padding="3"/>

            <Button Grid.Column="1"
                    Content="..."
                    Width="30"
                    Margin="5,0,0,0"
                    Click="BtnBrowse_Click"
                    Background="Black"
                    Foreground="White"
                    BorderBrush="White"/>
        </Grid>

        <!-- Salvar Configs. -->
        <StackPanel Margin="0,0,0,20">
            <CheckBox x:Name="ChkRememberHost"
                      Content="Salvar Host Ip"
                      Margin="0,5,0,0"
                      Foreground="White"/>
            <CheckBox x:Name="ChkRememberPath"
                      Content="Salvar Patch"
                      Margin="0,5,0,0"
                      Foreground="White"/>
            <CheckBox x:Name="ChkRememberPassword"
                      Content="Salvar Senha"
                      Margin="0,5,0,0"
                      Foreground="White"/>
        </StackPanel>

        <Button Content="CONECTAR"
                Click="BtnConnect_Click"
                Height="30"
                Background="Black"
                Foreground="White"
                FontWeight="Bold">

            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>

        </Button>
    </StackPanel>
</Window>