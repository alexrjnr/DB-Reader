<Window x:Class="DBReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DB Reader - Budda Edition" 
        Height="650" Width="1100" 
        Icon="pack://application:,,,/Assets/buda.ico"
        MinHeight="600" MinWidth="1000"
        Background="#0F0F0F" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#161616" BorderBrush="#333" BorderThickness="0,0,1,0" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="BtnSync" Grid.Row="0" Content="Recarregar DB 🔄" 
                        Click="BtnSync_Click" Height="40" Margin="0,0,0,15" 
                        Background="#1E1E1E" Foreground="White" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock Grid.Row="1" Text="Filtrar Jogador:" Foreground="White" FontSize="11" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtSearch" Grid.Row="2" TextChanged="TxtSearch_TextChanged" 
                         Height="35" Margin="0,0,0,15" VerticalContentAlignment="Center" 
                         Background="#1A1A1A" Foreground="White" BorderBrush="#333" Padding="8"/>

                <DataGrid x:Name="GridPlayers" Grid.Row="3" AutoGenerateColumns="False" 
                          IsReadOnly="True" CanUserAddRows="False" Background="LightGray" 
                          Foreground="Black" BorderThickness="0" 
                          SelectionChanged="GridPlayers_SelectionChanged" 
                          RowBackground="LightGray" AlternatingRowBackground="#1A1A1A" 
                          HeadersVisibility="Column" GridLinesVisibility="None" 
                          VerticalScrollBarVisibility="Auto" 
                          FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="13">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <TabControl Grid.Column="1" Background="Black" BorderBrush="#333" Margin="15">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Padding" Value="15,8"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Geral">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">

                        <Border Background="Black"
                    BorderBrush="White"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="25">

                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Nome do Personagem:" Foreground="White" FontWeight="Bold" Grid.Row="0" VerticalAlignment="Center"/>
                                <Border Grid.Row="0" Grid.Column="1"
                            Background="#101010"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,4">
                                    <TextBlock x:Name="StatusName"
                                   Text="---"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="DemiBold"/>
                                </Border>

                                <TextBlock Text="Conta do Personagem:" Foreground="White" FontWeight="Bold" Grid.Row="1" VerticalAlignment="Center"/>
                                <Border Grid.Row="1" Grid.Column="1"
                            Background="#101010"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,4">
                                    <TextBlock x:Name="StatusAccount"
                                   Text="---"
                                   Foreground="White"/>
                                </Border>

                                <TextBlock Text="Classe do Personagem:" Foreground="White" FontWeight="Bold" Grid.Row="2" VerticalAlignment="Center"/>
                                <Border Grid.Row="2" Grid.Column="1"
                            Background="#101010"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,4">
                                    <TextBlock x:Name="StatusClass"
                                   Text="---"
                                   Foreground="White"/>
                                </Border>

                                <TextBlock Text="Level do Personagem :" Foreground="White" FontWeight="Bold" Grid.Row="3" VerticalAlignment="Center"/>
                                <Border Grid.Row="3" Grid.Column="1"
                            Background="#101010"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,4">
                                    <TextBlock x:Name="StatusLevel"
                                   Text="---"
                                   Foreground="White"/>
                                </Border>

                                <TextBlock Text="Localização Atual:" Foreground="White" FontWeight="Bold" Grid.Row="4" VerticalAlignment="Center"/>
                                <Border Grid.Row="4" Grid.Column="1"
                            Background="#101010"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,4">
                                    <TextBlock x:Name="StatusLoc"
                                   Text="---"
                                   Foreground="White"/>
                                </Border>

                                <TextBlock Text="Quantidade de Gold:" Foreground="White " FontWeight="Bold" Grid.Row="5" VerticalAlignment="Center"/>
                                <Border Grid.Row="5" Grid.Column="1"
                            Background="#1a1400"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,4">

                                    <StackPanel x:Name="GoldContainer"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"/>

                                </Border>

                            </Grid>

                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Talentos">
                <Grid Margin="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="500"/>
                    </Grid.ColumnDefinitions>

                    <Viewbox Grid.Column="0" MaxHeight="400" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <Canvas Width="112" Height="205" Background="Black">
                            <Image Width="112" Height="205" Source="pack://application:,,,/Assets/talent_bg.png" 
                                   Stretch="UniformToFill" Opacity="1" RenderOptions.BitmapScalingMode="HighQuality"/>

                            <Image x:Name="SlotG2" Canvas.Left="13" Canvas.Top="70" Width="24" Height="24"/>
                            <Image x:Name="SlotG1" Canvas.Left="45" Canvas.Top="70" Width="24" Height="24"/>
                            <Image x:Name="SlotM2" Canvas.Left="78" Canvas.Top="70" Width="24" Height="24"/>
                            <Image x:Name="SlotM1" Canvas.Left="13" Canvas.Top="107" Width="24" Height="24"/>
                            <Image x:Name="SlotS1" Canvas.Left="78" Canvas.Top="107" Width="24" Height="24"/>
                            <Image x:Name="SlotS2" Canvas.Left="13" Canvas.Top="144" Width="24" Height="24"/>
                            <Image x:Name="SlotU1" Canvas.Left="45" Canvas.Top="144" Width="24" Height="24"/>
                            <Image x:Name="SlotU2" Canvas.Left="78" Canvas.Top="144" Width="24" Height="24"/>
                        </Canvas>
                    </Viewbox>

                    <ItemsControl x:Name="TalentNameList" Grid.Column="2" VerticalAlignment="Top">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Black" BorderBrush="White" BorderThickness="2" CornerRadius="4" Margin="0,0,0,10" Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Category}" Foreground="White" FontSize="9" FontWeight="SemiBold" TextAlignment="Left"/>
                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </TabItem>

            <TabItem Header="Inventário">
                <ScrollViewer Background="#0A0A0A" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="InventoryGrid" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="12" Margin="0" VerticalAlignment="Top"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="50" Height="50" Margin="0" ToolTip="{Binding ToolTip}">
                                    <Image Source="pack://application:,,,/Assets/slot_bg.png"
                                           Width="50" Height="50" Stretch="Fill" 
                                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                    <Image Source="{Binding Icon}" Stretch="Uniform" Margin="4" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="{Binding Amount}" Foreground="White" FontSize="15" FontWeight="SemiBold" 
                                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,3,2">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="1" ShadowDepth="1" Color="Black"/>
                                        </TextBlock.Effect>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Amount}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Inventário Sprite">
                <ScrollViewer Background="#0A0A0A" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="ElfInventoryGrid" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="12" Margin="0" VerticalAlignment="Top"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="50" Height="50" Margin="0" ToolTip="{Binding ToolTip}">
                                    <Image Source="pack://application:,,,/Assets/slot_bg.png"
                                           Width="50" Height="50" Stretch="Fill" 
                                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                    <Image Source="{Binding Icon}" Stretch="Uniform" Margin="4" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="{Binding Amount}" Foreground="White" FontSize="15" FontWeight="SemiBold" 
                                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,3,2">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="1" ShadowDepth="1" Color="Black"/>
                                        </TextBlock.Effect>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Amount}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Banco">
                <ScrollViewer Background="#0A0A0A" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="StorageGrid" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="12" Margin="0" VerticalAlignment="Top"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="50" Height="50" Margin="0" ToolTip="{Binding ToolTip}">
                                    <Image Source="pack://application:,,,/Assets/slot_bg.png"
                                           Width="50" Height="50" Stretch="Fill" 
                                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                    <Image Source="{Binding Icon}" Stretch="Uniform" Margin="4" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="{Binding Amount}" Foreground="White" FontSize="15" FontWeight="SemiBold" 
                                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,3,2">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="1" ShadowDepth="1" Color="Black"/>
                                        </TextBlock.Effect>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Amount}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

        </TabControl>
    </Grid>
</Window>